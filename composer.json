{
  "name": "exoplanet/board",
  "description": "Exoplanet Forum System",
  "keywords": ["exo", "planet", "exoplanet", "laravel", "forum", "discussion"],
  "license": "MIT",
  "authors": [
    {
      "name": "Christopher MÃ¼hl",
      "email": "cmuehl@unitybox.de",
      "role": "Founder"
    }
  ],
  "support": {
    "issues": "https://github.com/exoplanetforum/board/issues"
  },
  "require": {
    "php": ">=5.5.9",
    "laravel/framework": "5.1.*",
    "laravelcollective/html": "5.1.*",
    "exoplanet/atmosphere": "dev-master"
  },
  "require-dev": {
    "fzaninotto/faker": "~1.4",
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "~4.0",
    "phpspec/phpspec": "~2.1",
    "barryvdh/laravel-ide-helper": "^2.1@dev"
  },
  "autoload-dev": {
    "classmap": [
      "tests/TestCase.php",
      "tests/UiTestCase.php",
      "tests/PluginTestCase.php"
    ]
  },
  "autoload": {
    "classmap": [
      "modules/backend/files"
    ],
    "psr-4": {
      "Exoplanet\\Backend\\": "modules/backend/src"
    }
  },
  "extra": {
    "installer-paths": {
      "plugins/{$vendor}/{$name}/": ["type:exoplanet-plugin"]
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "php artisan key:generate"
    ],
    "post-update-cmd": [
      "php artisan clear-compiled",
      "php artisan ide-helper:generate",
      "php artisan optimize"
    ]
  },
  "config": {
    "preferred-install": "dist"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
