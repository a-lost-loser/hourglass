{
  "name": "hourglass/board",
  "description": "Hourglass Forum System",
  "keywords": ["hourglass", "board", "community", "laravel", "forum", "discussion"],
  "license": "MIT",
  "authors": [
    {
      "name": "Christopher MÃ¼hl",
      "email": "christopher@padarom.io",
      "role": "Founder"
    }
  ],
  "support": {
    "issues": "https://github.com/hourglasses/board/issues"
  },
  "require": {
    "php": ">=5.5.9",
    "laravel/framework": "5.2.*",
    "hourglass/core": "dev-master",
    "kriswallsmith/assetic": "^1.3",
    "patchwork/jsqueeze": "^2.0"
  },
  "require-dev": {
    "symfony/dom-crawler": "~3.0",
    "symfony/css-selector": "~3.0",
    "fzaninotto/faker": "~1.4",
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "~4.0",
    "phpspec/phpspec": "~2.1",
    "barryvdh/laravel-ide-helper": "^2.1@dev"
  },
  "autoload-dev": {
    "classmap": [
      "tests/TestCase.php",
      "tests/UiTestCase.php",
      "tests/PluginTestCase.php"
    ]
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/hourglasses/core"
    }
  ],
  "autoload": {
    "classmap": [
      "modules/backend/files"
    ],
    "psr-4": {
      "Hourglass\\Backend\\": "modules/backend/src"
    }
  },
  "extra": {
    "installer-paths": {
      "plugins/{$vendor}/{$name}/": ["type:hourglass-plugin"]
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "php artisan key:generate"
    ],
    "post-update-cmd": [
      "php artisan clear-compiled",
      "php artisan ide-helper:generate",
      "php artisan optimize"
    ]
  },
  "config": {
    "preferred-install": "dist"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
