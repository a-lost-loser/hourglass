{
  "name": "hourglass/hourglass",
  "description": "The Hourglass Forum Software",
  "keywords": ["hourglass", "board", "community", "laravel", "forum", "discussion"],
  "license": "MIT",
  "authors": [
    {
      "name": "Christopher MÃ¼hl",
      "email": "christopher@padarom.io",
      "role": "Founder"
    }
  ],
  "support": {
    "issues": "https://github.com/hourglass/hourglass/issues"
  },
  "require": {
    "php": ">=5.6.4",
    "laravel/framework": "5.3.*",
    "kriswallsmith/assetic": "^1.3",
    "patchwork/jsqueeze": "^2.0",
    "composer/composer": "~1.0",
    "hourglass/addon-installer": "~1.0",
    "hourglass/installer": "dev-master",
    "hourglass/forum": "dev-master"
  },
  "require-dev": {
    "symfony/dom-crawler": "~3.0",
    "symfony/css-selector": "~3.0",
    "fzaninotto/faker": "~1.4",
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "~4.0",
    "barryvdh/laravel-ide-helper": "^2.1@dev"
  },
  "autoload": {
    "classmap": [
      "hourglass/tests",
      "hourglass/database"
    ],
    "psr-4": {
      "Hourglass\\": "hourglass/src"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "php pulse key:generate"
    ],
    "post-update-cmd": [
      "php pulse clear-compiled",
      "php pulse optimize"
    ]
  },
  "config": {
    "preferred-install": "dist"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
